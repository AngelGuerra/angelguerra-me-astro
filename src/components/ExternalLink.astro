---
export interface Props {
  href: string;
  text: string;
  title: string;
  css?: string;
  rel?: string;
}

const { href, text, title, rel = "", css = "" } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel={`noopener ${rel}`.trim()}
  title={title}
  class={`inline underline underline-offset-4 decoration-2 decoration-very-peri hover:decoration-neutral-700 font-bold transition-all print:no-underline print:font-bold ${css}`.trim()}
  >{text}</a
>
