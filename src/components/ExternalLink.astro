---
export interface Props {
  href: string;
  text: string;
  title: string;
  css?: string;
}

const { href, text, title, css = "" } = Astro.props;
---

<a
  {href}
  target="_blank"
  rel="noopener"
  {title}
  class={`underline underline-offset-2 decoration-wavy hover:decoration-rose-900 ${css}`.trim()}
  >{text}</a
>
